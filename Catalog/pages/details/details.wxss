/* pages/details/details.wxss */
page {
  background: #fff;
}

.container {
  background: #fff;
  margin: 0;
  padding: 0;
}

.banner {
  height: 472rpx;
  width: 100%;
  text-align: center;
}

.banner-img {
  width: 420rpx;
  height: 420rpx;
  margin: 0 auto;
}
.arg{margin-left: 40rpx; margin-right: 60rpx;}

.pro-title{font-size: 26rpx; color: #333;margin-top: 30rpx; display: flex; height: 26rpx; line-height: 40rpx; }
.pro-number{font-size: 24rpx; color: #818181;}
.pro-price{font-size: 36rpx;color: #eb174b; font-weight: bold;}
.content{ width: 100%;  padding: 10px 0;}
.paragraph{margin: 0 20rpx; line-height: 2em; font-size: 12px; color: #818181; }
.paragraph-img{width: 100%;}
.pro-tag{
margin-left: 20rpx;
color: #e11e45;
font-size: 14rpx;
}
.pro-tag-i{width: 16rpx; height: 16rpx; margin-top: 12rpx;}
.pro-cs{display: flex; justify-content:space-between; height: 36rpx; margin-top: 16rpx;line-height: 36rpx;}
.p-title{height: 54rpx; margin: 60rpx 20rpx 40rpx 20rpx; border-bottom: 4rpx solid #eb174b}
.p-title-b{height: 54rpx;  display: inline-block;padding: 0 20rpx; background: #eb174b; line-height: 54rpx; color: #fff; text-align: center; font-size: 26rpx;}
.p-content{ margin:0 20rpx;}
.table{width: 100%;min-height: 30rpx;padding-top: 1rpx;border-top: 1rpx solid #ededed;}
.tr{display: flex;min-height: 30rpx; width: 100%; border-left: 1rpx solid #ededed; border-bottom: 1rpx solid #ededed;}
.td{flex: 1;border-right: 1rpx solid #ededed; padding: 0 10rpx;}